<% if image.favorited_by?(current_user) %>
 <p>
  <%= link_to hobby_image_favorites_path(image), method: :delete, remote: true do %>
   ♥<%= image.favorites.count %> いいね
  <% end %>
 </p>
<% else %>
 <p>
  <%= link_to hobby_image_favorites_path(image), method: :post, remote: true do %>
   ♡<%= image.favorites.count %> いいね
  <% end %>
 </p>
<% end %>

