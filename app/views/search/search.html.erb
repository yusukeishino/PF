<h2>検索結果</h2>

<% if @images.present? %>
 <% @images.each do |image| %>
  <%= link_to user_path(image.user.id) do %>
   <%= image.user.name %>
  <% end %>
  <!--投稿画像-->
  <%= link_to hobby_image_path(image.id) do %>
   <%= attachment_image_tag image, :image, size: "150x150", format: 'jpg', fallback: "no_image.jpg" %>
  <% end %>
  <!--画像説明-->
  <%= image.body %>
  <!--コメント数-->
  <p><%= image.image_comments.count %>コメント</p>
 <% end %>
<% else %>
 <% if @users.present? %>
  <% @users.each do |user| %>
   <%= link_to user_path(user.id) do %>
    <h4><%= user.name %></h4>
   <% end %>
   <!--プロフィール画像-->
   <%= attachment_image_tag user, :user_image, size: "150x150", format: 'jpg', fallback: "no_image.jpg" %>
  <% end %>
 <% end %>
<% end %>
