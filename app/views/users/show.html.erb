<h1>マイページ</h1>
<!--プロフィール画像-->
<%= attachment_image_tag @user, :user_image, size: "150x150", format: 'jpg', fallback: "no_image.jpg" %>
<h4>ユーザー名</h4>
<h3><%= @user.name %></h3>
<!--自己紹介-->
<h3><%= @user.body %></h3>
<% if @user.id == current_user.id %>
 <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
<% end %>
<h3>投稿一覧</h3>
<% @images.each do |image| %>
 <!--投稿画像-->
 <%= link_to hobby_image_path(image.id) do %>
  <%= attachment_image_tag image, :image, size: "150x150", format: 'jpg', fallback: "no_image.jpg" %>
 <% end %>
 <!--コメント数-->
<%= "#{image.image_comments.count} コメント" %>
<% end %>

