<% if @image.errors.any? %>
  <%= @image.errors.count %>件のエラーが発生しました
  <% @image.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<h1>画像を投稿</h1>
<%= form_with model: @image, local:true do |f| %>
 <h4>画像</h4>
 <%= f.attachment_field :image %>
 <h4>説明</h4>
 <%= f.text_area :body %>
 <%= f.submit '投稿' %>
<% end %>