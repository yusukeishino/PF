<% @images.each do |image| %>
 <!--投稿者名-->
 <%= link_to user_path(image.user) do %>
  <%= image.user.name %>
 <% end %>
 <!--投稿画像-->
 <%= link_to hobby_image_path(image.id) do %>
  <%= attachment_image_tag image, :image, size: "150x150", format: 'jpg', fallback: "no_image.jpg" %>
 <% end %>
 <!--画像説明-->
 <%= image.body %>
 <!--コメント数-->
 <%= "#{image.image_comments.count} コメント" %>
<% end %>